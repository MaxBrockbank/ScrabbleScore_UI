@using ScrabbleScore.Models;

<div class="container">
  <h1>Words:</h1>
  @if(@Model.Count == 0)
  {
    <h4>No Words Have Been Played Yet</h4>
  }
  else
  {
    @foreach(Game game in @Model)
    {
      <h4>@game.UserWord - @game.UserScore </h4>
    }
  }

  <form action="/game" method="post">
    <button type="submit">Clear all words!</button>
  </form>
</div>

